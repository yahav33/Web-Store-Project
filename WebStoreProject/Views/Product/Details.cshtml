@model Product
@inject WebStoreProject.Services.IReadPhoto reader

<html>
<head>
    <style>
        
    </style>
</head>
<body>
    <br />
    <div>
        <div>
            <h2>@Model.Title</h2>
        </div>
        <div>
            <h3> Price - @Model.Price</h3>
        </div>
        <div>
            <h3>Date of Publish - @Model.Date.ToShortDateString()</h3>
        </div>
        <div>
            <h4> @Model.ShortDescription</h4>
        </div>
        <div>
            <h5> @Model.LongDescription</h5>
        </div>

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    @if (Model.ImageOne == null)
                    {
                        <img src="~/No_image_available.png" width="345" height="345" />
                    }
                    else
                    {
                        <img src="@reader.ByteToImage(Model.ImageOne)" alt="Eroor" width="345" height="345" />
                    }
                </div>
                <div class="carousel-item ">
                    @if (Model.ImageTwo == null)
                    {
                        <img src="~/No_image_available.png" width="345" height="345" />
                    }
                    else
                    {
                        <img src="@reader.ByteToImage(Model.ImageTwo)" alt="Eroor" width="345" height="345" />
                    }
                </div>
                <div class="carousel-item ">
                    @if (Model.ImageThree == null)
                    {
                        <img src="~/No_image_available.png" width="345" height="345" />
                    }
                    else
                    {
                        <img src="@reader.ByteToImage(Model.ImageThree)" alt="Eroor" width="345" height="345" />
                    }
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <h5>
            Seller Details :
        </h5>
        <div>
            <span>@ViewData["userName"]</span><div>@ViewData["userEmail"]</div><div>@ViewData["userBirthDate"]</div>
        </div>
    </div>
</body>
</html>
